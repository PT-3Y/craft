{# Logos #}
{% macro logo(type = 'logo') %}
    {% spaceless %}
        {% set logo = type == 'logo' ? brand.logo.one() : brand.icon.one() %}
        <a href="{{- alias('@web') ~ '/' -}}" class="block relative z-1 {{ type == 'logo' ? 'w-48 h-6' : 'w-12 h-12' -}}">
            {{ svg(logo) }}
        </a>
    {% endspaceless %}
{% endmacro %}

{# Hero Image #}
{% macro hero_image(heroImage, alt = '') %}
    {% set image = heroImage.optimizeHero %}
    {% spaceless %}
        <figure class="relative w-full h-full">
        <img  src="{{ image.placeholderImage() }}"
                data-src="{{ image.src() }}"
                data-srcset="{{ image.srcset() }}"
                sizes="100vw"
                alt="{{ alt }}"
                class="object-cover min-w-full min-h-full w-full h-full z-1 lazyload">
        </figure>
    {% endspaceless %}
{% endmacro %}

{# Content Image #}
{% macro content_image(contentImage, alt = '', ratio = null, caption = null) %}
    {% import _self as render %}
    {% set image = contentImage.optimizeContent %}
    {% spaceless %}
        <figure class="w-full h-full">
        <div class="img {{ ratio -}}">
            <img  src="{{ image.placeholderImage() }}"
                data-src="{{ image.src() }}"
                data-srcset="{{ image.srcset() }}"
                sizes="100vw"
                alt="{{ alt }}"
                class="object-cover lazyload">
        </div>
        {% if caption %}
            {{- render.caption(caption) -}}
        {% endif %}
        </figure>
    {% endspaceless %}
{% endmacro %}

{# Teaser Image #}
{% macro teaser_image(teaserImage, alt = '') %}
    {% set image = teaserImage.optimizeTeasers %}
    {% spaceless %}
        <figure class="relative w-full h-full">
        <div class="img is1by1">
            <img  src="{{ image.placeholderImage() }}"
                data-src="{{ image.src() }}"
                data-srcset="{{ image.srcset() }}"
                sizes="100vw"
                alt="{{ alt }}"
                class="object-cover lazyload">
        </div>
        </figure>
    {% endspaceless %}
{% endmacro %}

{# Profile Image #}
{% macro profile_image(profileImage, alt = '') %}
    {% set image = profileImage.optimizeProfile %}
    <figure class="img overflow-hidden h-16 w-16 rounded-full">
        <img  src="{{ image.placeholderImage() }}"
            data-src="{{ image.src() }}"
            data-srcset="{{ image.srcset() }}"
            sizes="25vw"
            alt="{{ alt }}"
            class="lazyload">
    </figure>
{% endmacro %}

{# Render Text #}
{% macro text(content) %}
    {% spaceless %}
        {{ content | raw | typogrify }}
    {% endspaceless %}
{% endmacro %}

{# Render Title #}
{% macro title(content, words = 60) %}
    {% spaceless %}
        {{- content | escape | typogrify(true) | truncateOnWord(words) | raw -}}
    {% endspaceless %}
{% endmacro %}