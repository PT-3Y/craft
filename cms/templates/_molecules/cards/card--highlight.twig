{% import '_macros/atoms' as atom %}
{% set teaserImage = content.teaserImage ?? placeholders.teaserPlaceholder %}

{%- minify -%}
    <div class="relative w-full md:w-1/2 xl:w-1/3 mb-8 lg:px-8">
        <div class="lg:px-16 mb-4 md:mb-8 lg:mb-12">
            {{- atom.teaser_image(teaserImage[0], teaserImage[0].title) -}}
        </div>
        
        <p class="text-xs font-bold uppercase tracking-wide leading-normal mb-4">{{ content.newsCategory[0].title }} - {{-  atom.formatDate(content.postDate) -}}</p>
        <h3 class="text-deca font-secondary font-normal leading-normal">{{- atom.text(content.title) -}}</h3>

        <a href="{{- url(alias('@web/' ~ content.uri)) -}}" class="absolute block top-0 left-0 h-full w-full z-1">
            <span class="a11y">
                {{ "Discover" | t }} {{ atom.text(content.title) }} {{ content.newsCategory[0].title -}}
            </span>
        </a>                   
    </div>
{%- endminify -%}